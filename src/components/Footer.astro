---
const today = new Date();

const socialLinks = [
	{
		name: 'LinkedIn',
		url: 'https://www.linkedin.com/in/rjwarren',
		ariaLabel: 'Richard Warren on LinkedIn',
		icon: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>`
	}
];

const internalLinks = [
	{
		name: 'Newsletter',
		url: '#newsletter',
		ariaLabel: 'Subscribe to newsletter',
		icon: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="4" width="20" height="16" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>`
	},
	{
		name: 'RSS',
		url: '/rss.xml',
		ariaLabel: 'Subscribe via RSS feed',
		icon: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M6.18 15.64a2.18 2.18 0 0 1 2.18 2.18C8.36 19 7.38 20 6.18 20C5 20 4 19 4 17.82a2.18 2.18 0 0 1 2.18-2.18M4 4.44A15.56 15.56 0 0 1 19.56 20h-2.83A12.73 12.73 0 0 0 4 7.27V4.44m0 5.66a9.9 9.9 0 0 1 9.9 9.9h-2.83A7.07 7.07 0 0 0 4 12.93V10.1z"/></svg>`
	}
];
---

<footer>
	<nav class="footer-links" aria-label="Footer navigation">
		<div class="link-group">
			{socialLinks.map(link => (
				<a
					href={link.url}
					aria-label={link.ariaLabel}
					target="_blank"
					rel="noopener noreferrer"
					class="footer-link"
				>
					<Fragment set:html={link.icon} />
					<span>{link.name}</span>
				</a>
			))}
			{internalLinks.map(link => (
				<a
					href={link.url}
					aria-label={link.ariaLabel}
					class="footer-link"
				>
					<Fragment set:html={link.icon} />
					<span>{link.name}</span>
				</a>
			))}
		</div>
	</nav>
	<p class="tagline">Building products, exploring AI, and chasing the perfect lap.</p>
	<p class="copyright">&copy; {today.getFullYear()} Richard Warren. All rights reserved.</p>
</footer>
<style>
	footer {
		padding: 2em 1em 6em 1em;
		background: linear-gradient(var(--gray-gradient)) no-repeat;
		color: rgb(var(--gray));
		text-align: center;
	}
	footer p {
		margin: 0.5em 0;
	}
	footer .tagline {
		font-size: 0.875rem;
		opacity: 0.8;
	}
	footer .copyright {
		font-size: 0.875rem;
		margin-top: 1em;
	}
	.footer-links {
		margin-bottom: 1.5em;
	}
	.link-group {
		display: flex;
		justify-content: center;
		gap: 1.5rem;
		flex-wrap: wrap;
	}
	.footer-link {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		color: rgb(var(--gray));
		text-decoration: none;
		padding: 0.5rem;
		border-radius: 4px;
		transition: color 0.2s ease, background-color 0.2s ease;
	}
	.footer-link:hover {
		color: var(--accent);
		background-color: rgba(var(--gray-light), 0.5);
	}
	.footer-link svg {
		flex-shrink: 0;
	}
</style>
