---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import SkipLink from '../../components/SkipLink.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`Blog | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
    <style>
      .page-header {
        max-width: 800px;
        margin: 0 auto;
        padding: 3rem 1.5rem 2rem;
        text-align: center;
      }

      .page-header h1 {
        font-size: 3rem;
        margin-bottom: 0.75rem;
      }

      .page-header h1 .wiggle {
        display: inline-block;
        animation: wiggle 3s ease-in-out infinite;
      }

      @keyframes wiggle {
        0%, 100% { transform: rotate(-3deg); }
        50% { transform: rotate(3deg); }
      }

      .page-header p {
        font-size: 1.2rem;
        color: var(--text-muted);
      }

      .posts-list {
        max-width: 800px;
        margin: 0 auto;
        padding: 1rem 1.5rem 3rem;
        list-style: none;
      }

      .post-item {
        background: white;
        border: 3px solid var(--text);
        border-radius: 16px;
        margin-bottom: 1.5rem;
        transition: all 0.2s;
        position: relative;
      }

      .post-item::before {
        content: '';
        position: absolute;
        top: -8px;
        right: 24px;
        width: 40px;
        height: 14px;
        background: var(--pop-3);
        border-radius: 2px;
        transform: rotate(-4deg);
      }

      .post-item:nth-child(3n+2)::before { background: var(--pop-2); }
      .post-item:nth-child(3n)::before { background: var(--pop-4); }

      .post-item:hover {
        transform: translateY(-3px) rotate(-0.5deg);
        box-shadow: 5px 5px 0 var(--text);
      }

      .post-item a {
        display: block;
        padding: 1.75rem;
        text-decoration: none;
      }

      .post-meta {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 0.75rem;
      }

      .post-tag {
        display: inline-block;
        background: var(--pop-2);
        color: white;
        padding: 0.25rem 0.75rem;
        border-radius: 6px;
        font-weight: 600;
        font-size: 0.8rem;
      }

      .post-date {
        font-size: 0.9rem;
        color: var(--text-muted);
      }

      .post-item h2 {
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
        color: var(--text);
        line-height: 1.3;
      }

      .post-item a:hover h2 {
        text-decoration: underline;
        text-decoration-style: wavy;
        text-underline-offset: 4px;
      }

      .post-item p {
        color: var(--text-muted);
        margin: 0;
        line-height: 1.6;
      }

      @media (max-width: 720px) {
        .page-header h1 { font-size: 2.25rem; }
        .post-item a { padding: 1.25rem; }
        .post-item h2 { font-size: 1.25rem; }
      }
    </style>
  </head>
  <body>
    <SkipLink />
    <Header />
    <main id="main-content">
      <div class="page-header">
        <h1>All the <span class="wiggle">✍️</span> Ramblings</h1>
        <p>Thoughts on product, AI, and going fast. Sorted by freshness.</p>
      </div>
      <ul class="posts-list">
        {posts.map((post) => (
          <li class="post-item">
            <a href={`/blog/${post.id}/`}>
              <div class="post-meta">
                {post.data.category && <span class="post-tag">{post.data.category}</span>}
                <span class="post-date"><FormattedDate date={post.data.pubDate} /></span>
              </div>
              <h2>{post.data.title}</h2>
              <p>{post.data.description}</p>
            </a>
          </li>
        ))}
      </ul>
    </main>
    <Footer />
  </body>
</html>
