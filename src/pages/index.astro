---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import NewsletterSignup from '../components/NewsletterSignup.astro';
import SkipLink from '../components/SkipLink.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const allPosts = await getCollection('blog');

// Workaround: List of featured post IDs until schema issue is resolved
const featuredPostIds = ['the-ai-pm-operating-system'];

// Featured posts (1-3 curated posts)
const featuredPosts = allPosts
	.filter((post) => featuredPostIds.includes(post.id))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 3);

// Recent posts (latest 3 posts)
const posts = allPosts
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 3);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			.hero {
				padding: 4rem 1rem 3rem;
				text-align: center;
				max-width: 800px;
				margin: 0 auto;
			}

			.hero h1 {
				font-size: 3.5rem;
				font-weight: 700;
				line-height: 1.1;
				margin: 0 0 1rem;
				color: rgb(var(--black));
			}

			.hero .tagline {
				font-size: 1.5rem;
				color: rgb(var(--gray));
				margin: 0 0 2.5rem;
				line-height: 1.5;
			}

			.topics {
				display: grid;
				grid-template-columns: repeat(3, 1fr);
				gap: 2rem;
				margin: 3rem 0;
				padding: 0 1rem;
				max-width: 1200px;
				margin-left: auto;
				margin-right: auto;
			}

			.topic-card {
				padding: 2rem;
				background: white;
				border-radius: 12px;
				box-shadow: 0 2px 8px rgba(var(--black), 5%);
				transition: transform 0.2s ease, box-shadow 0.2s ease;
			}

			.topic-card:hover {
				transform: translateY(-4px);
				box-shadow: 0 4px 16px rgba(var(--black), 10%);
			}

			.topic-card h3 {
				margin: 0 0 0.5rem;
				color: rgb(var(--black));
				font-size: 1.5rem;
			}

			.topic-card p {
				margin: 0;
				color: rgb(var(--gray));
				line-height: 1.6;
			}

			.topic-icon {
				font-size: 2.5rem;
				margin-bottom: 1rem;
			}

			.recent-posts {
				margin: 4rem auto;
				padding: 0 1rem;
			}

			.recent-posts h2 {
				text-align: center;
				font-size: 2.5rem;
				margin: 0 0 3rem;
				color: rgb(var(--black));
			}

			.posts-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
				gap: 2rem;
				list-style: none;
				padding: 0;
				margin: 0;
			}

			.post-card {
				background: white;
				border-radius: 12px;
				overflow: hidden;
				box-shadow: 0 2px 8px rgba(var(--black), 5%);
				transition: transform 0.2s ease, box-shadow 0.2s ease;
			}

			.post-card:hover {
				transform: translateY(-4px);
				box-shadow: 0 4px 16px rgba(var(--black), 10%);
			}

			.post-card a {
				text-decoration: none;
				display: block;
				padding: 1.5rem;
			}

			.post-card h3 {
				margin: 0 0 0.5rem;
				color: rgb(var(--black));
				font-size: 1.25rem;
				line-height: 1.3;
			}

			.post-card .category {
				display: inline-block;
				padding: 0.25rem 0.75rem;
				background: rgb(var(--accent));
				color: white;
				border-radius: 4px;
				font-size: 0.875rem;
				margin-bottom: 0.75rem;
				font-weight: 500;
			}

			.post-card .description {
				color: rgb(var(--gray));
				margin: 0 0 0.75rem;
				line-height: 1.6;
			}

			.post-card .date {
				color: rgb(var(--gray-light));
				font-size: 0.875rem;
				margin: 0;
			}

			.cta {
				text-align: center;
				margin: 4rem 0 2rem;
			}

			.cta-button {
				display: inline-block;
				padding: 1rem 2rem;
				background: rgb(var(--accent));
				color: white;
				text-decoration: none;
				border-radius: 8px;
				font-weight: 600;
				font-size: 1.125rem;
				transition: transform 0.2s ease, box-shadow 0.2s ease;
			}

			.cta-button:hover {
				transform: translateY(-2px);
				box-shadow: 0 4px 12px rgba(var(--accent), 30%);
			}

			.cta-primary {
				text-align: center;
				margin: 4rem 0 4rem;
				padding: 2rem 1rem;
			}

			.cta-button-primary {
				display: inline-block;
				padding: 1.25rem 3rem;
				background: var(--accent);
				color: white;
				text-decoration: none;
				border-radius: 8px;
				font-weight: 700;
				font-size: 1.25rem;
				transition: transform 0.2s ease, box-shadow 0.2s ease;
				box-shadow: 0 4px 16px rgba(35, 55, 255, 0.2);
			}

			.cta-button-primary:hover {
				transform: translateY(-3px);
				box-shadow: 0 6px 20px rgba(35, 55, 255, 0.35);
			}

			.cta-button-primary:focus {
				outline: 3px solid rgba(35, 55, 255, 0.4);
				outline-offset: 2px;
			}

			.featured-posts {
				margin: 4rem auto;
				padding: 0 1rem;
			}

			.featured-posts h2 {
				text-align: center;
				font-size: 2.5rem;
				margin: 0 0 3rem;
				color: rgb(var(--black));
			}

			.featured-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
				gap: 2.5rem;
				margin: 0 auto;
				max-width: 1200px;
			}

			.featured-card {
				background: white;
				border-radius: 16px;
				overflow: hidden;
				box-shadow: 0 4px 16px rgba(var(--black), 8%);
				transition: transform 0.3s ease, box-shadow 0.3s ease;
				border: 3px solid rgb(var(--accent-light));
			}

			.featured-card:hover {
				transform: translateY(-6px);
				box-shadow: 0 8px 24px rgba(var(--black), 15%);
			}

			.featured-card a {
				text-decoration: none;
				display: block;
				padding: 2rem;
			}

			.featured-card h3 {
				margin: 0 0 1rem;
				color: rgb(var(--black));
				font-size: 1.75rem;
				line-height: 1.3;
				font-weight: 700;
			}

			.featured-card .category {
				display: inline-block;
				padding: 0.375rem 1rem;
				background: rgb(var(--accent));
				color: white;
				border-radius: 6px;
				font-size: 0.875rem;
				margin-bottom: 1rem;
				font-weight: 600;
			}

			.featured-card .description {
				color: rgb(var(--gray));
				margin: 0 0 1rem;
				line-height: 1.7;
				font-size: 1.1rem;
			}

			.featured-card .date {
				color: rgb(var(--gray-light));
				font-size: 0.875rem;
				margin: 0;
			}

			@media (max-width: 720px) {
				.hero h1 {
					font-size: 2.5rem;
				}

				.hero .tagline {
					font-size: 1.25rem;
				}

				.topics {
					grid-template-columns: 1fr;
				}

				.featured-grid {
					grid-template-columns: 1fr;
					gap: 1.5rem;
				}

				.featured-card a {
					padding: 1.5rem;
				}

				.featured-card h3 {
					font-size: 1.5rem;
				}

				.posts-grid {
					grid-template-columns: 1fr;
				}
			}
		</style>
	</head>
	<body>
		<SkipLink />
		<Header />
		<main id="main-content">
			<section class="hero">
				<h1>Building Products, Exploring AI</h1>
				<p class="tagline">
					Practical insights on Product Management, AI tools, and motorsport‚Äîfor builders who ship.
				</p>
			</section>

			<section class="topics">
				<div class="topic-card">
					<div class="topic-icon">üéØ</div>
					<h3>Product Management</h3>
					<p>
						Strategy, execution, and lessons from shipping products that solve real problems.
					</p>
				</div>

				<div class="topic-card">
					<div class="topic-icon">ü§ñ</div>
					<h3>Artificial Intelligence</h3>
					<p>
						Exploring AI tools, building with LLMs, and thinking about the future of AI products.
					</p>
				</div>

				<div class="topic-card">
					<div class="topic-icon">üèÅ</div>
					<h3>Motorsport Corner</h3>
					<p>
						Sim racing setups, MX-5 ownership, track days, and the pursuit of the perfect line.
					</p>
				</div>
			</section>

			<section class="cta-primary">
				<a href="/blog" class="cta-button-primary">View All Posts</a>
			</section>

			{featuredPosts.length > 0 && (
				<section class="featured-posts">
					<h2>Featured Posts</h2>
					<div class="featured-grid">
						{featuredPosts.map((post) => (
							<article class="featured-card">
								<a href={`/blog/${post.id}/`}>
									{post.data.category && (
										<span class="category">{post.data.category}</span>
									)}
									<h3>{post.data.title}</h3>
									<p class="description">{post.data.description}</p>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</article>
						))}
					</div>
				</section>
			)}

			{posts.length > 0 && (
				<section class="recent-posts">
					<h2>Recent Posts</h2>
					<ul class="posts-grid">
						{posts.map((post) => (
							<li class="post-card">
								<a href={`/blog/${post.id}/`}>
									{post.data.category && (
										<span class="category">{post.data.category}</span>
									)}
									<h3>{post.data.title}</h3>
									<p class="description">{post.data.description}</p>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))}
					</ul>
				</section>
			)}

			<NewsletterSignup />
		</main>
		<Footer />
	</body>
</html>
